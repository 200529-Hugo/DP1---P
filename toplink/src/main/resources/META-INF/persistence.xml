<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">
    <persistence-unit name="ovchipkaartPU">
        <class>opdracht.domain.Reiziger</class>
        <class>opdracht.domain.Adres</class>
        <class>opdracht.domain.OVchipkaart</class>
        <class>opdracht.domain.Product</class>

        <properties>
            <property name="javax.persistence.provider" value="org.eclipse.persistence.jpa.PersistenceProvider"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ovchip"/>
            <property name="javax.persistence.jdbc.user" value="hugodeheus"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.logging.level" value="WARNING"/>
            <property name="eclipselink.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>

